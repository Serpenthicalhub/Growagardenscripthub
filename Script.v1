-- ğŸ§  Time (Asia/Manila)
local function getTimePH()
	local t = os.date("!*t")
	t.hour = t.hour + 8
	if t.hour >= 24 then t.hour -= 24 end
	return string.format("%02d/%02d/%04d %02d:%02d:%02d", t.month, t.day, t.year, t.hour, t.min, t.sec)
end

